@using TatBlog.Core.Contracts;
@using TatBlog.Core.Entities;
@using TatBlog.Core.Constants;
@model IPagedList<TagItem>
@{
    ViewData["PageTitle"] = "Danh sách thẻ";
    var tagsList = Model;
    
}

<h1>
    Danh sách thẻ
</h1>



<!-- Hiển thị Form để tìm bài viết -->
<partial name="_TagsFilterPane" />

@if (tagsList != null && tagsList.Count > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Tên thẻ</th>
                <th>Số bài viết</th>
                <th>Nội dung</th>
                <th>Xóa thẻ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in tagsList)
            {
                <tr>
                    <td>
                        <a asp-area="Admin"
                   asp-controller="Tags"
                   asp-action="Edit"
                   asp-route-id="@tag.Id"
                   class="text-bold">
                            @tag.Name
                        </a>

                    </td>
                    <td>
                        @tag.PostCount
                    </td>

                    <td>
                        <p class="text-muted">
                            @tag.Description
                        </p>
                    </td>
                    
                    <td>
                        <a asp-area="Admin"
                   asp-controller="Tags"
                   asp-action="DeleteTag"
                   asp-route-id="@tag.Id"
                   onclick="return confirm ('Bạn có muốn xóa thẻ này không?');"
                   class="btn btn-outline-danger">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_Pager" model="@tagsList" />
}
else
{
    <h1 class="text-danger">
        Không tìm thấy thẻ nào
    </h1>
}



