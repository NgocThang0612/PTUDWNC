@model TatBlog.WebApp.Areas.Admin.Models.SubscriberEditModel
@{
        ViewData["PageTitle"] = "Thêm/Cập nhật đăng ký";
}

<h1>Thêm/Cập nhật đăng ký</h1>

<form asp-area="Admin"
      asp-controller="Subscribers"
      asp-action="Edit"
      enctype="multipart/form-data"
      method="post">
      <div asp-validation-summary="ModelOnly"></div>
      <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="SubscribeDate" />

      <div class="row mb-3">
          <label asp-for="ResonUnsubscribe"
                 class="col-sm-2 col-form-label"></label>
           <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ResonUnsubscribe">
            <span asp-validation-for="ResonUnsubscribe"
                    class="text-danger"></span>
           </div>
      </div>

      <div class="row mb-3">
          <label asp-for="Notes"
                 class="col-sm-2 col-form-label"></label>
          <div class="col-sm-10">
              <input type="text" class="form-control" asp-for="Notes">
              <span asp-validation-for="Notes"
                    class="text-danger"></span>
          </div>
      </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            Lưu các thay đổi
        </button>

        <a asp-area="Admin"
           asp-controller="Subscribers"
           asp-action="Index"
           class="btn btn-danger">
            Hủy & Quay lại
       </a>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    
    <script src="~/lib/speakingurl/speakingurl.min.js"></script>

    <script>
        $(funcion() {
            $('#Title').change(funcion() {
                var slug = getSlug(this.value);
                $('#UrlSlug').val(slug).trigger('blur');
            });
        });
    </script>
}